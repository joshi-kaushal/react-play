{
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "src",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"]
}
